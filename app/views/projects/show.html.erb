<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
    
<p>
  <strong>Tasks Descriptions:</strong>
  <% if @project.tasks %>
    <% @project.tasks.each do |task| %>
      <p><%= task.description %><p>
    <% end %>
  <% end %>
</p>

